sudo docker build -f Dockerfile -t test .

sudo docker run --rm \
    -e DISPLAY=$DISPLAY \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    --device=/dev/video0 \
    test

docker run --rm \
    -e DISPLAY=$DISPLAY \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    ubuntu:22.04 \
    bash -c "apt update && apt install -y x11-apps && xeyes"

xhost +local:docker